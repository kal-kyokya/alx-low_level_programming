#include "main.h"

/**
 * print_diagonal - Draws a diagonal using backslashes.
 * @n: Number of times backslash get printed.
 *
 * Return: Nothing.
 */
void print_diagonal(int n)
{
	int counter1, counter2, checker;

	counter1 = 0;
	checker = n - 1;

	if (n > 0)
	{
		while (counter1 < n)
		{
			_putchar('\\');
			_putchar('\n');
			counter2 = 0;
			while (counter2 != checker)
			{
				_putchar(' ');
				counter2++;
			}
			counter1++;
		}
	}
	else
		_putchar('\n');
}
