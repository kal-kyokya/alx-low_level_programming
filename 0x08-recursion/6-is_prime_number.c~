#include "main.h"

/**
 *is_prime_number - Tells whether a number is prime or not.
 *@x: Number to be assessed.
 *
 *Return: 1 if input is prime and 0 if not.
 */
int is_prime_number(int x)
{
	int result;

	if (x <= 1)
		result = 0;
	else if (x % 2 || x % 3 || x % 5 != 0)
		result = 1;
	return (result);
}
