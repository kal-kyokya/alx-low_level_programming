#include "main.h"

/**
 * print_number - Send an integer to stdout using _putchar().
 * @n: Integers to be printed.
 *
 * Return: Nothing.
 */
void print_number(int n)
{
	int x;

	x = n / 10;
	if (x < 10)
	{
		_putchar(x + '0');
		n %= 10;
		_putchar(n + '0');
	}
	else
	{
		print_number(x);
		n %= 10;
		_putchar(n + '0');
	}
}
